
<%  include ../layouts/header.ejs %> 
<%  include ../layouts/navbar.ejs %> 

<h1>Fiches Km</h1>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Add fiches
        </h4>
    </div>
    <div class="card-body">
        <form action="/fiches/add" id="manager" method="POST">

            <div class="form-group">
                <label for="date">Date du jour de la fiches km</label>
                <input type="datetime-local" class="form-control" name="date" id="date"
                   required>
            </div>
            <div class="form-group">
				<label for="trajet_start">Début de trajet</label>
                <input type="datetime-local" class="form-control" name="trajet_start" id="trajet_start">

			</div>
    
			<div class="form-group">
				<label for="trajet_end">Fin de trajet</label>
                <input type="datetime-local" class="form-control" name="trajet_end" id="trajet_end">

            </div>
            
            
			<div class="form-group">
				<label for="motif">Objet du déplacement</label>

                <select class="form-control" name="motif" id="motif" required="required">					
                    <option value="Client">Client</option>
                    <option value="Projet">Projet</option>
                    <option value="Reunion">Réunion</option>
                </select>
                
            </div>
            
            <div class="form-group">
				<label for="commentaire">Commentaires</label>
                <input type="text" class="form-control" name="commentaire" id="commentaire">

            </div>
            
            <div class="form-group">
				<label for="compteur_start">Relevé compteur début</label>
                <input type="number" class="form-control" name="compteur_start" id="compteur_start">

            </div>
            <div class="form-group">
				<label for="compteur_end">Relevé compteur fin</label>
                <input type="number" class="form-control" name="compteur_end" id="compteur_end">

            </div>
          


    </div>
    <div class="card-footer bg-transparent border-success justify-content-center d-flex">
        <div class="col-sm-12 text-right">
            <input type="submit" name="submit" class="btn btn-block btn-primary" value="Valider" />
        </div>
    </div>
    </form>
</div>
<br>
 

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Fiches Kilométrique
        </h4>
    </div>
    <div class="card-body">



        <div class="row">
            <div class="col-lg-12 col-md-8 col-sm-6">
                <div class="table-responsive">
                    <table class="table table-striped table-dark" style="margin-top: 10px;">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Daté du</th>
                                <th>Début trajet</th>
                                <th>Fin trajet</th>
                                <th>Objet du déplacement</th>
                                <th>Commentaire</th>
                                <th>Relevé compteur</th>

                            </tr>
                        </thead>
                        <% for(let i=0; i < fiches.length; i++) {%>
                            <tbody>
                                <tr>
                                    <td scope="row"><%= fiches[i].id %></td>
                                    <td><%= fiches[i].date %></td>
                                    <td><%= fiches[i].trajet_start %></td>
                                    <td><%= fiches[i].trajet_end %></td>
                                    <td><%= fiches[i].motif %></td>
                                    <td><%= fiches[i].commentaire %></td>
                                    <td><%= fiches[i].compteur %></td>



    
                                    <td>
                                        <a class="btn btn-sm btn-warning"
                                            href="/fiches/edit/<%= fiches[i].id %>"><i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-danger"
                                            href="/fiches/delete/<%= fiches[i].id %>"><i class="fas fa-times-circle"></i>
                                        </a>
    
                                    </td>
    
                                </tr>
                            </tbody> 
                            <% } %>
                  

                    </table>
                </div>
            </div>

        </div>



    </div>

    
    <%  include ../layouts/footer.ejs %> 
