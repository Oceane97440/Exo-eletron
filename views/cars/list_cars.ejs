
<%  include ../layouts/header.ejs %> 
<%  include ../layouts/navbar.ejs %> 

<h1>Entité</h1>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Add cars
        </h4>
    </div>
    <div class="card-body">
        <form action="/cars/add" id="manager" method="POST">

            <div class="form-group">
                <label for="marque">Nom de la marque</label>
                <input type="text" class="form-control" name="marque" id="marque"
                   required>
            </div>
            <div class="form-group">
				<label for="model">Modèle</label>
                <input type="text" class="form-control" name="model" id="model">

			</div>
    
			<div class="form-group">
				<label for="puissance">Puissance</label>
                <input type="number" class="form-control" name="puissance" id="puissance">

            </div>
            
            
			<div class="form-group">
				<label for="annee">Année</label>
                <input type="month" class="form-control" name="annee" id="annee">

			</div>


    </div>
    <div class="card-footer bg-transparent border-success justify-content-center d-flex">
        <div class="col-sm-12 text-right">
            <input type="submit" name="submit" class="btn btn-block btn-primary" value="Valider" />
        </div>
    </div>
    </form>
</div>
<br>
 

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Fiches Cars
        </h4>
    </div>
    <div class="card-body">



        <div class="row">
            <div class="col-lg-12 col-md-8 col-sm-6">
                <div class="table-responsive">
                    <table class="table table-striped table-dark" style="margin-top: 10px;">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Marques</th>
                                <th>Model</th>
                                <th>Puissance</th>
                                <th>Année</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <% for(let i=0; i < cars.length; i++) {%>
                            <tbody>
                                <tr>
                                    <td scope="row"><%= cars[i].id %></td>
                                    <td><%= cars[i].marque %></td>
                                    <td><%= cars[i].model %></td>
                                    <td><%= cars[i].puissance %></td>
                                    <td><%= cars[i].annee %></td>


    
                                    <td>
                                        <a class="btn btn-sm btn-warning"
                                            href="/cars/edit/<%= cars[i].id %>"><i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-danger"
                                            href="/cars/delete/<%= cars[i].id %>"><i class="fas fa-times-circle"></i>
                                        </a>
    
                                    </td>
    
                                </tr>
                            </tbody> 
                            <% } %>
                  

                    </table>
                </div>
            </div>

        </div>



    </div>

    
    <%  include ../layouts/footer.ejs %> 
