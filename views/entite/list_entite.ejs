
<%  include ../layouts/header.ejs %> 
<%  include ../layouts/navbar.ejs %> 

<h1>Entité</h1>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Add entité
        </h4>
    </div>
    <div class="card-body">
        <form action="/entite/add" id="manager" method="POST">

            <div class="form-group">
                <label for="entite_name">Nom de l'entité</label>
                <input type="text" class="form-control" name="entite_name" id="entite_name"
                   required>
            </div>
    
			<div class="form-group">
				<label for="entite_type">Format</label>
				<select class="form-control" name="entite_type" id="entite_type" required="required">
                    <option>Sélectionner type</option>
                    <option value="Entreprise">Entreprise</option>
                    <option value="Association">Association</option>
				
				</select>
			</div>


    </div>
    <div class="card-footer bg-transparent border-success justify-content-center d-flex">
        <div class="col-sm-12 text-right">
            <input type="submit" name="submit" class="btn btn-block btn-primary" value="Valider" />
        </div>
    </div>
    </form>
</div>
<br>

<div id="card-forecast" class="card">
    <div class="card-header">
        <h4 class="card-title">
            Liste des Entité
        </h4>
    </div>
    <div class="card-body">



        <div class="row">
            <div class="col-lg-12 col-md-7 col-sm-4">
                <div class="table-responsive">
                    <table class="table table-striped table-dark" style="margin-top: 10px;">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Noms</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <% for(let i=0; i < entites.length; i++) {%>
                            <tbody>
                                <tr>
                                    <td scope="row"><%= entites[i].id %></td>
                                    <td><%= entites[i].entite_name %></td>
                                    <td><%= entites[i].entite_type %></td>

    
                                    <td>
                                        <a class="btn btn-sm btn-warning"
                                            href="/entite/edit/<%= entites[i].id %>"><i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-danger"
                                            href="/entite/delete/<%= entites[i].id %>"><i class="fas fa-times-circle"></i>
                                        </a>
    
                                    </td>
    
                                </tr>
                            </tbody> <!-- preview content goes here-->
                            <% } %>
                  

                    </table>
                </div>
            </div>

        </div>



    </div>

    
    <%  include ../layouts/footer.ejs %> 
